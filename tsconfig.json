{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "declaration": true,
    "outDir": ".build",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true, // Source maps for Webpack
    "types": ["reflect-metadata", "@types/node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["/node_modules/", "**/__tests__/*"]
}
